/* release.wxss */

.header {
  width: 100%;
  height: 90rpx;
  text-align: center;
  font-size: 36rpx;
  line-height: 90rpx;
  background: #ff5000;
  color: #fff;
  position: relative;
  padding: 14rpx 0 0 0;
  box-sizing: border-box;
}

.releasesearch {
  width: auto;
  padding: 0 6rpx;
  line-height: 60rpx;
  text-align: left;
  margin: 0px 110rpx 0px 20rpx;
  background: #fff;
  border-radius: 6rpx;
}

.releasesearch input[type=text] {
  width: 300rpx;
  height: 60rpx;
  border: none;
  margin: 0;
  text-align: left;
  padding: 10rpx 14rpx;
  font-size: 24rpx;
  color: #999;
  box-sizing: border-box;
}

.searchbox {
  font-size: 24rpx;
  right: 20rpx;
  width: 70rpx;
  background: #fff;
  border-radius: 6rpx;
  top: 16rpx;
  color: #666;
  padding: 10rpx;
  line-height: 38rpx;
  box-sizing: border-box;
  position: absolute;
}
.releasefilter {
    width: 100%;
    height: 90rpx;
    background: #FFFFFF;
    border-bottom: 1rpx solid #d9d9d9;
}
.releasefilter text {
    width: 25%;
    line-height: 90rpx;
    float: left;
    text-align: center;
    font-size: 26rpx;
    color: #666666;
}

.releasefilter text.on {
    color: #ff4f00;
}
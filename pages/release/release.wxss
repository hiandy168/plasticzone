/* release.wxss */

.header {
  width: 100%;
  height: 90rpx;
  text-align: center;
  font-size: 36rpx;
  line-height: 90rpx;
  background: #ff5000;
  color: #fff;
  position: relative;
  padding: 14rpx 0 0 0;
  box-sizing: border-box;
}

.releasesearch {
    width: auto;
    padding: 0 6rpx;
    line-height: 60rpx;
    text-align: left;
    margin: 0px 110rpx 0px 20rpx;
    background: #FFFFFF;
    border-radius: 6rpx;
}
.releasesearch input[type=text] {
    width: 300rpx;
    height: 60rpx;
    border: none;
    margin: 0;
    text-align: left;
    padding: 10rpx 14rpx;
    font-size: 24rpx;
    color: #999;
    box-sizing: border-box;
}
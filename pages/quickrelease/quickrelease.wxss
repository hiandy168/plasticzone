.lookmeHead {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
}

.lookmeHead view {
  width: 180rpx;
  font-size: 28rpx;
  position: relative;
  display: inline-block;
  color: #999;
  text-align: center;
}

.lookmeHead view.on {
  color: #333;
}

.lookmeHead view.on:after {
  bottom: 10rpx;
  left: 50%;
  margin: 0 0 0 -24rpx;
  content: "";
  display: block;
  position: absolute;
  width: 48rpx;
  height: 6rpx;
  background: #fe6d1a;
  border-radius: 4rpx;
}

.toReleasefooter {
    width: 100%;
    height: 100rpx;
    text-align: center;
    border-top: 1rpx solid #d9d9d9;
    background: #FFFFFF;
    position: fixed;
    left: 0;
    bottom: 0;
}
.toReleaseclose {
    width: 34rpx;
    height: 34rpx;
    margin: 30rpx 0 0 0;
    display: inline-block;
    background: url(http://statics.myplas.com/myapp/img/toreleaseclose.png) no-repeat;
    background-size: 100% 100%;
}
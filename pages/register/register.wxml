<!--register.wxml-->
<view class="registerWrap">
  <view class="registerTitle">
    <view class="arrowLeft"></view>帐号信息
  </view>
  <view class="registerInput2">
    <view class="registerBox2">
      <strong>手机号码:</strong>
      <input type="tel" bindinput="bindMobile" maxlength="11" placeholder="请输入您的手机号码" />
    </view>
    <view class="registerBox2">
      <strong>设置密码:</strong>
      <input type="password" bindinput="bindPassword" placeholder="请输入密码" />
    </view>
    <view class="registerBox2">
      <strong>验证码:</strong>
      <input type="tel" bindinput="bindCode" maxlength="6" placeholder="请输入收到的验证码" />
      <view class="validCode">获取验证码</view>
    </view>
  </view>
  <view class="registerTitle">
    <view class="arrowLeft"></view>更多信息
  </view>
  <view class="registerInput2">
    <view class="registerBox2">
      <strong>姓名:</strong>
      <input type="text" bindinput="bindName" placeholder="请输入您的姓名" />
    </view>
    <view class="registerBox2">
      <strong>公司名称:</strong>
      <input type="text" bindinput="bindCname" placeholder="请输入您的公司全称" />
    </view>
    <view class="registerBox2">
      <strong>企业类型:</strong>
      <view class="radioGroup">
        <label>
            <view class="radiobox">
              <view class="radiocircle"></view>
            </view>
            <text>塑料制品厂</text>
          </label>
        <label>
            <view class="radiobox on">
              <view class="radiocircle"></view>
            </view>
            <text>原料供应商</text>
          </label>
        <label>
            <view class="radiobox">
              <view class="radiocircle"></view>
            </view>
            <text>物流服务商</text>
          </label>
      </view>

    </view>
  </view>

</view>
<view bindtap="toProtocol" class="loginprotocol">
  <view style="float:left;">《我的塑料网用户服务协议》</view>
</view>

<view class="registerBtn"><input type="button" value="提交注册信息" /></view>